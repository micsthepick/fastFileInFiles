{
    "name": "C++ Development",
    "build": {
      "dockerfile": "Dockerfile",
      "context": "."
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
            "ms-vscode.cpptools",
